{
    "compilerOptions": {
        "target": "ES2015",
        "module": "es2020",
        "moduleResolution": "node",
        "baseUrl": "./",
        "paths": {
            "@js/*": [
                "resources/js/*"
            ]
        },
        // "allowJs": true,
        "strict": true,
        "skipLibCheck": true,
        "noImplicitAny": false,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "sourceMap": true
    },
    "include": [
        "resources/js/**/*"
    ],
    "exclude": [
        "node_modules/**/*",
        "public/js/**"
    ]
}
